<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="7dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shname"
                android:hint="Shop Name"
                android:textSize="16dp"
                android:padding="3dp"
                android:fontFamily="@font/signika_negative_semibold"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Address: "
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:lines="2"
                    android:fontFamily="@font/signika_negative"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/shaddress"
                    android:hint="Shop Adress"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:lines="2"
                    android:fontFamily="@font/signika_negative"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Booked Date: "
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:fontFamily="@font/signika_negative"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bookedDate"
                    android:hint="Booked Date"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:fontFamily="@font/signika_negative"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout
>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Booked Time: "
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:fontFamily="@font/signika_negative"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bookedTime"
                    android:hint="Booked Time"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:fontFamily="@font/signika_negative"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/vtnViewShop"
                    android:layout_alignParentEnd="true"
                    android:text="View Shop"
                    android:background="@drawable/red_curved_button"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>